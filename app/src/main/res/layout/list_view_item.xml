<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.theandroidpeople.materialscan.expandablelist.ExpandingLayout
        android:id="@+id/expanding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_linear_layout"
        android:layout_gravity="center_vertical"
        android:padding="5dp"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/piggy_image_view"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/piggy_whole_orange" />

                <TextView
                    android:id="@+id/text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/piggy_image_view2"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:padding="2dp"
                    android:src="@drawable/quantity" />

                <TextView
                    android:id="@+id/text_view2"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginLeft="15dp"
                    android:text="Quantity: 1"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>


    </com.theandroidpeople.materialscan.expandablelist.ExpandingLayout>


    <ImageView
        android:id="@+id/dollar_image_view"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignTop="@+id/item_linear_layout"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/dollar_orange" />

    <RelativeLayout
        android:id="@+id/item_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="46dp">

        <TextView
            android:id="@+id/title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="$2.50"
            android:textSize="16sp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/expanding_layout"
        android:background="#E0E0E0" />

</RelativeLayout>