<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.theandroidpeople.materialscan.expandablelist.ExpandingLayout
        android:id="@+id/expanding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_linear_layout"
        android:layout_gravity="center_vertical"

        android:visibility="gone">

        <ImageView
            android:id="@+id/piggy_image_view"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:background="@drawable/piggy_whole_orange" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:gravity="center_vertical" />

    </com.theandroidpeople.materialscan.expandablelist.ExpandingLayout>


    <ImageView
        android:id="@+id/dollar_image_view"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/item_linear_layout"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/dollar_orange" />

    <RelativeLayout
        android:id="@+id/item_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp">

        <TextView
            android:id="@+id/title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="$2.50"
            android:textSize="16sp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/expanding_layout"
        android:background="#E0E0E0" />

</RelativeLayout>